handleKeyPress = (item) => (e) => {
e.preventDefault()
if (e.nativeEvent.keyCode === 13) {
console.log(`This is enter on item, which is called ${item}!`)
}
}
renderItem(item) {
return (
<MyInput
onKeyPress={ this.handleKeyPress(item) }
/>
)
}
